{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug App",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "pnpx",
            "runtimeArgs": ["nodemon"],
            "args": [],
            "sourceMaps": true,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "restart": true,
            "env": {
                "NODE_ENV": "development"
            }
        }
    ]
}